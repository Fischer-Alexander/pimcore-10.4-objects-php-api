{% extends 'layouts/layout.html.twig' %}

{% block content %}

    <div class="row pt-4 mb-2">
        {%  for blog in blogs %}
        <div class="col-md-12">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col-10 p-4 d-flex flex-column position-static">
                    <h3 href="http://pimcore-basic/blogs/{{ blog.slug }}~n{{ blog.id }}" class="mb-3">{{ blog.title }}</h3>
                    <p class="card-text mb-auto"> {{ blog.teaser }}</p>
                    <a href="http://pimcore-basic/blogs/{{ blog.slug }}~n{{ blog.id }}" class="mt-3 stretched-link">Weiterlesen</a>
                </div>
                <div class="col-2 d-none d-lg-block">
                    <a href="http://pimcore-basic/blogs/{{ blog.slug }}~n{{ blog.id }}">
                        {{ blog.image.thumbnail('blogList').html({imgAttributes: {class: 'mr-3'}}) | raw }}
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>


{% endblock %}